{
	"name": "shortn",
	"version": "0.1.0",
	"private": true,
	"description": "A non-innovative URL shortener",
	"author": "ismailgunayy",
	"license": "MIT",
	"repository": "https://github.com/ismailgunayy/shortn",
	"scripts": {
		"build": "turbo run build",
		"build:client": "turbo run build --filter client",
		"build:api": "turbo run build --filter api",
		"dev": "turbo run dev",
		"dev:client": "turbo run dev --filter client",
		"dev:api": "turbo run dev --filter api",
		"check-types": "turbo run check-types",
		"clean": "rimraf .turbo out; turbo clean",
		"format": "prettier . --write",
		"lint": "turbo run lint",
		"start": "turbo run start",
		"start:client": "turbo run start --filter client",
		"start:api": "turbo run start --filter api"
	},
	"devDependencies": {
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.5",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "yarn@1.22.22",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
