		// 	"groupSlug": "fastify",
		// 	"matchPackageNames": ["fastify{/,}**", "@fastify{/,}**"],
		//   "matchUpdateTypes": ["minor"]
		// },
		// {
		// 	"groupName": "Svelte ecosystem",
		// 	"groupSlug": "svelte",
		// 	"matchPackageNames": ["svelte{/,}**", "@sveltejs{/,}**"]
		// },
		// {
		// 	"groupName": "ESLint ecosystem",
		// 	"groupSlug": "eslint",
		// 	"matchPackageNames": ["eslint{/,}**", "@eslint{/,}**"]
		// },
		{
			"automerge": true,
			"groupName": "all patches",
			"groupSlug": "patches",
			"matchUpdateTypes": ["patch"]
		},
		{
			"automerge": true,
			"autoApprove": true,
			"matchPackageNames": ["@types/**"],
			"matchUpdateTypes": ["patch"]
		}
	]
}
