{
	"$schema": "https://backboard.railway.app/railway.schema.json",
	"build": {
		"builder": "DOCKERFILE",
		"dockerfilePath": "apps/client/Dockerfile",
		"buildCommand": "yarn workspace client run build"
	},
	"deploy": {
		"restartPolicyType": "ALWAYS",
		"sleepApplication": true,
		"startCommand": "yarn workspace client run start",
		"overlapSeconds": 60,
		"drainingSeconds": 15
	}
}
